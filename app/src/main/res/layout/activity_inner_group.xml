<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InnerGroup"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPortada"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/banner" />

        <TextView
            android:id="@+id/tvDescGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <Button
            android:id="@+id/btnVerComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Comentarios"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:onClick="VerComentario"/>

    
        <EditText
            android:id="@+id/etComentario"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnAddComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Comentarios"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="AddComentario"/>

</LinearLayout>